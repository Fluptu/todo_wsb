.flash__message{"data-controller"=>"flash"}
  - if notice
    .alert.alert-info.alert-dismissible.text-center.fade.show.m-1{:role=>"alert"}
      = notice
      %button.btn-close{:type=>"button", "data-action"=>"flash#close", "aria-label"=>"Close"}


  - if alert
    .alert.alert-warning.alert-dismissible.fade.show.m-1{:role=>"alert"}
      = alert
      %button.btn-close{:type=>"button","data-action"=>"flash#close", "aria-label"=>"Close"}